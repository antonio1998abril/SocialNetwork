<div class="container-fluid">
        <div class="row">
          <div class="col-md-3">
            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <div class="text-center">
                         <img class="profile-user-img img-fluid img-rounded"
                       src="/{{alldatauser.file}}"
                       alt="User profile picture"> 
                </div>
                <h3 class="profile-username text-center">{{alldatauser.name}}</h3>
                <p class="text-muted text-center">{{alldatauser.nick}}</p>
                <a href="/user/contact/{{alldatauser._id}}" class="btn btn-dark btn-block"><b>See</b></a>

                  <a href="/user/configuration/{{alldatauser._id}}"  class="btn btn-warning btn-block"><b> <i class="fas fa-cogs"style="font-size:15px"></i></b></a>               
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- About Me Box -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">About Me</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <strong><i class="fas fa-book mr-1"></i> Education</strong>
                <p class="text-muted">{{alldatauser.education}}</p>
                <hr>
                <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                <p class="text-muted">{{alldatauser.location}}</p>
                 <hr>
                <strong><i class="fas fa-pencil-alt mr-1"></i> Skills</strong>
                <p class="text-muted"><span class="tag tag-danger">{{alldatauser.skills}}</span></p>
                <hr>
                <strong><i class="far fa-file-alt mr-1"></i> Biography</strong>
                <p class="text-muted">{{alldatauser.bio}}</p>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
          <div class="col-md-9">
            <div class="card">
              <div class="card-header p-2">
                <ul class="nav nav-pills">
                  <li class="nav-item"><a class="nav-link active" href="/user/activity" >Activity</a></li>
                </ul>
              </div><!-- /.card-header -->      

              {{#each posts}}   
              {{#compare status "==" "public"}}
{{!--       <p>idpost: {{_id}}</p>  
      <p>iduser creo: {{user._id}}</p>
         <p>user conectado:{{../alldatauser._id}} </p> --}}
              <div class="card-body">
                <div class="tab-content">
                  <div class="active tab-pane" id="activity">
                    <!-- Post -->
                  <div class="post_separetor">
                    <div class="post clearfix">
                      <div class="user-block">
                       
                         <img class="img-circle img-bordered-sm" src="/{{user.file}}" alt="User Image">
                        <span class="username">
                          <a href="/user/contact/{{user._id}}">{{user.name}}</a><a> {{title}}</a>
                          <span class="float-right">
                            <a class="link-black text-sm">{{category.title}}</a>
                          </span>  
                           {{#compare share "==" true}}
                                  <a href="/user/contact/{{sharefrom.user._id}}" class="btn-tool" style="font-family:Comic Sans MS, cursive, sans-serif"> Shared From {{sharefrom.user.name}} </a>
                            {{/compare}}
                        
                        </span>
                        <span class="description">{{creationDate}}</span>
                      </div>
                      <!-- /.user-block -->
                      <p>
                       {{description}}
                      </p>

                    {{#compare typefile "==" "image"}}
                     <div class="row">
                        <div class="col-sm-12">
                          <img class="imagen_index mb-3 " src="/{{file}}" alt="Photo">
                        </div>
                    </div>                          
                    {{else}}
              
                      <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="/{{file}}" frameborder="0" allowfullscreen=""></iframe>
                      </div>
                 
                    {{/compare}}
                        <p>
                       {{!--  <span class="float-right">
                          <a href="#" class="link-black text-sm">
                            <i class="far fa-comments mr-1"></i> Comments (5)
                          </a>
                        </span> --}}
                      </p> 
                    <a href="user/post/{{_id}}" class="btn btn-dark">Comment &rarr;</a>
                  </div>     
                    <!-- /.post -->
                  </div>
                </div>
                <!-- /.tab-content -->
              </div><!-- /.card-body -->
            </div>
{{else}}
{{!-- IMPRIMIR POST SI ES PRIVADO --}}
              {{#compare ../userid "==" user._id}}
                <div class="card-body">
                <div class="tab-content">
                  <div class="active tab-pane" id="activity">
                  <div class="post_separetor">
                    <div class="post clearfix">
                      <div class="user-block">
                       
                         <img class="img-circle img-bordered-sm" src="/{{user.file}}" alt="User Image">
                        <span class="username">
                          <a href="/user/contact/{{user._id}}">{{user.name}}</a><a> {{title}}</a>
                          <span class="float-right">
                            <a class="link-black text-sm">{{category.title}} <i class="fas fa-lock"></i> </a>
                          </span>  
                           {{#compare share "==" true}}
                                  <a href="/user/contact/{{sharefrom.user._id}}" class="btn-tool" style="font-family:Comic Sans MS, cursive, sans-serif"> Shared From {{sharefrom.user.name}} </a>
                            {{/compare}}
                        
                        </span>
                        <span class="description">{{creationDate}}</span>
                      </div>
                      <p>
                       {{description}}
                      </p>
                        


                                 {{#compare typefile "==" "image"}}
                     <div class="row">
                     <div class="col-sm-12">
                              <img class="imagen_index mb-3 " src="/{{file}}" alt="Photo">
                            </div>
                    </div>                          
                            {{else}}
                                  <div class="timeline-body">
                    <div class="embed-responsive embed-responsive-16by9">
                      <iframe class="embed-responsive-item" src="/{{file}}" frameborder="0" allowfullscreen=""></iframe>
                    </div>
                  </div>

                    {{/compare}}
                        <p>
                      </p> 
                    <a href="user/post/{{_id}}" class="btn btn-dark">Comment &rarr;</a>
                  </div>     
                  </div>
                </div>
              </div>
            </div>
              {{/compare}} 


             {{/compare}}
 

          {{/each}}
            <!-- /.nav-tabs-custom -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->




