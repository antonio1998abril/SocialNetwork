<div class="container-fluid">
        <div class="row">
          <div class="col-md-12">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <div class="text-center">
             
                         <img class="profile-user-img img-fluid img-bordered-sm" src="/{{follow.file}}" alt="User profile picture">
               
                </div>

                <h3 class="profile-username text-center">{{follow.name}}</h3>

                <p class="text-muted text-center">{{follow.nick}}</p>

                <ul class="list-group list-group-unbordered mb-3">
                  <li class="list-group-item">
                    <b>Followers</b> <a class="float-right">{{totalfollow}}</a>
                  </li>
                  <li class="list-group-item">
                    <b>Following</b> <a class="float-right">{{total}}</a>
                  </li>
                </ul>
              

              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- About Me Box -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">About Me</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <strong><i class="fas fa-book mr-1"></i> Education</strong>

                <p class="text-muted">
                  {{follow.education}}
                </p>

                <hr>

                <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>

                <p class="text-muted">{{follow.location}}</p>

                <hr>

                <strong><i class="fas fa-pencil-alt mr-1"></i> Skills</strong>

                <p class="text-muted">
                  <span class="tag tag-danger">{{follow.skills}}</span>
                </p>

                <hr>

                <strong><i class="far fa-file-alt mr-1"></i> Biography</strong>

                <p class="text-muted">{{follow.bio}}</p>
              </div>
              <!-- /.card-body -->
           
            </div>
            {{#each posts}}
            {{#compare status "==" "public"}}


             <div class="card-body">
                <div class="tab-content">
                  <div class="active tab-pane" id="activity">
                  
                  <div class="post_separetor">
                    <div class="post clearfix">
                      <div class="user-block">
                       
                         
                         <img class="img-circle img-bordered-sm" src="/{{user.file}}" alt="User Image">
                 
                        <span class="username">
                          <a href="#">{{user.name}}</a><a> {{title}}</a>
                          <span class="float-right">
                            <a class="link-black text-sm">{{category.title}}</a>
                          </span>  
                          <a href="#" class="float-right btn-tool"></a>
                        </span>
                        <span class="description">{{creationDate}}</span>
                      </div>

                      <p>
                       {{description}}
                      </p>
                              {{#compare typefile "==" "image"}}
                     <div class="row">
                        <div class="col-sm-12">
                          <img class="imagen_index mb-3 " src="/{{file}}" alt="Photo">
                        </div>
                    </div>                          
                    {{else}}
                    <div class="timeline-body">
                      <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="/{{file}}" frameborder="0" allowfullscreen=""></iframe>
                      </div>
                    </div>
                    {{/compare}}
                      
                  </div>     
                    <!-- /.post -->
                  </div>
                </div>
                <!-- /.tab-content -->
              </div><!-- /.card-body -->

              {{else}}

              {{/compare}}
              {{/each}}
            <!-- /.card -->
          </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>

