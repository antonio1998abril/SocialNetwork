           <a href="/user/contact/{{user._id}}" class="btn btn-primary">see &rarr;</a>

           {{/compare}} 
          </div>
          <div class="card-footer text-muted">
            Creado el {{creationDate}}, By
            <h2 href="#">{{user.name}}</h2>
          </div>
        </div>
        {{/each}}

     {{else}}
