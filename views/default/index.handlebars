<div class="row">
      <!-- Blog Entries Column -->
        <div class="col-md-7">
            <!-- Profile Image -->
        <h1 class="my-4">GoFace</h1>
        <!-- Blog Post -->
        {{#if user}}
          {{#each post}}
        <div class="card mb-4">
{{!--           <img class="card-img-top" src="/{{file}}" alt="Card image cap"> --}}
           {{#compare typefile "==" "image"}}
                     <div class="row">
                        <div class="col-sm-12">
                          <img class="imagen_index mb-3 " src="/{{file}}" alt="Photo">
                        </div>
                    </div>                          
                    {{else}}
                    <div class="timeline-body">
                      <div class="embed-responsive embed-responsive-16by9">
